{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "noEmit": true,
      "allowJs": true, 
      "skipLibCheck": true, 
      "esModuleInterop": true, 
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true
    }
  }